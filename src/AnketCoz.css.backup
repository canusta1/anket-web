/* AnketCoz.css */

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* GLOBAL: Tüm interaktif elementlerin çalışmasını garanti et */
input,
textarea,
select,
button,
label,
a {
    pointer-events: auto !important;
}

input,
textarea,
select {
    cursor: text !important;
}

button,
label,
a {
    cursor: pointer !important;
}

input[type="radio"],
input[type="checkbox"] {
    cursor: pointer !important;
}

.anket-container {
    min-height: 100vh;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 40px 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
        'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
        sans-serif;
}

.anket-container * {
    pointer-events: auto !important;
}

/* ==================== LOADING ==================== */
.loading-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 20px;
}

.spinner {
    width: 50px;
    height: 50px;
    border: 4px solid rgba(255, 255, 255, 0.3);
    border-top: 4px solid white;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
}

@keyframes spin {
    to {
        transform: rotate(360deg);
    }
}

.loading-wrapper p {
    color: white;
    font-size: 18px;
    font-weight: 500;
}

/* ==================== CARDS ==================== */
.anket-card,
.error-card,
.success-card {
    background: white;
    max-width: 700px;
    width: 100%;
    padding: 50px;
    pointer-events: auto;
    cursor: default;
}

@keyframes slideIn {
    from {
        opacity: 0;
        transform: translateY(30px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* ==================== STEP INDICATOR ==================== */
.step-indicator {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 40px;
    gap: 0;
}

.step-badge {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 16px;
    background: #e2e8f0;
    color: #718096;
    transition: all 0.3s ease;
}

.step-badge.active {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    transform: scale(1.1);
}

.step-badge.completed {
    background: #48bb78;
    color: white;
}

.step-line {
    width: 40px;
    height: 3px;
    background: #e2e8f0;
    margin: 0;
}

/* ==================== CARD HEADER ==================== */
.card-header {
    margin-bottom: 40px;
    text-align: center;
}

.card-header h1 {
    font-size: 28px;
    color: #2d3748;
    margin-bottom: 12px;
    font-weight: 700;
}

.card-header p {
    font-size: 16px;
    color: #718096;
    line-height: 1.6;
}

/* ==================== FORM ==================== */
.form {
    width: 100%;
}

.form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    margin-bottom: 30px;
}

.form-group {
    display: flex;
    flex-direction: column;
    gap: 8px;
}

.form-label {
    font-size: 14px;
    font-weight: 600;
    color: #2d3748;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.form-input,
.textarea-input {
    padding: 12px 16px;
    border: 1px solid #e2e8f0;
    font-size: 15px;
    color: #2d3748;
    font-family: inherit;
    background: white;
}

.form-input:focus,
.textarea-input:focus {
    outline: 1px solid #667eea;
    border-color: #667eea;
}

.form-input.error {
    border-color: #e53e3e;
    background: #fff5f5;
}

.error-text {
    font-size: 13px;
    color: #e53e3e;
    font-weight: 500;
}

/* ==================== CRITERIA SECTION ==================== */
.criteria-section {
    margin: 40px 0;
    padding: 25px;
    background: #f7fafc;
    border-left: 3px solid #667eea;
}

.criteria-title {
    font-size: 16px;
    font-weight: 600;
    color: #2d3748;
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

/* ==================== SORULAR ==================== */
.sorular-container {
    display: flex;
    flex-direction: column;
    gap: 25px;
    margin-bottom: 40px;
}

.soru-card {
    padding: 25px;
    background: #f9fafb;
    border: 1px solid #e2e8f0;
    margin-bottom: 20px;
}

.soru-header {
    display: flex;
    align-items: flex-start;
    gap: 15px;
    margin-bottom: 20px;
}

.soru-numarasi {
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 35px;
    height: 35px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border-radius: 50%;
    font-weight: 700;
    font-size: 16px;
    flex-shrink: 0;
}

.soru-text {
    font-size: 16px;
    color: #2d3748;
    font-weight: 600;
    line-height: 1.5;
    margin: 0;
}

.soru-content {
    margin-top: 15px;
}

/* ==================== SEÇENEKLER ==================== */
.secenekler {
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.radio-wrapper,
.checkbox-wrapper {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 15px;
    background: white;
    border: 1px solid #e2e8f0;
    cursor: pointer;
}

.radio-input,
.checkbox-input {
    width: 20px;
    height: 20px;
    cursor: pointer;
    accent-color: #667eea;
    flex-shrink: 0;
}

.radio-label,
.checkbox-label {
    font-size: 15px;
    color: #2d3748;
    cursor: pointer;
    margin: 0;
}

.radio-input:checked+.radio-label,
.checkbox-input:checked+.checkbox-label {
    font-weight: 600;
    color: #667eea;
}

/* ==================== TEXTAREA ==================== */
.textarea-input {
    width: 100%;
    min-height: 100px;
    padding: 12px 16px;
    border: 1px solid #e2e8f0;
    font-size: 15px;
    color: #2d3748;
    resize: vertical;
    font-family: inherit;
}

/* ==================== BUTTONS ==================== */
.form-actions {
    display: flex;
    gap: 15px;
    margin-top: 40px;
    padding-top: 30px;
    border-top: 2px solid #e2e8f0;
}

.btn-primary,
.btn-secondary {
    padding: 14px 30px;
    border: none;
    font-size: 15px;
    font-weight: 600;
    cursor: pointer;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.btn-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    flex: 1;
}

.btn-primary:hover:not(:disabled) {
    opacity: 0.9;
}

.btn-primary:disabled {
    opacity: 0.6;
    cursor: not-allowed;
}

.btn-secondary {
    background: #e2e8f0;
    color: #2d3748;
    flex: 1;
}

.btn-secondary:hover {
    background: #cbd5e0;
}

.full-width {
    width: 100%;
}

/* ==================== ERROR CARD ==================== */
.error-card {
    text-align: center;
}

.error-icon {
    font-size: 60px;
    margin-bottom: 20px;
}

.error-card h2 {
    font-size: 24px;
    color: #e53e3e;
    margin-bottom: 15px;
}

.error-card p {
    font-size: 16px;
    color: #718096;
    margin-bottom: 20px;
    line-height: 1.6;
}

/* ==================== SUCCESS CARD ==================== */
.success-card {
    text-align: center;
}

.success-icon {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
    color: white;
    font-size: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 30px;
}

.success-card h1 {
    font-size: 28px;
    color: #2d3748;
    margin-bottom: 15px;
}

.success-card p {
    font-size: 16px;
    color: #718096;
    margin-bottom: 15px;
    line-height: 1.6;
}

.success-subtitle {
    font-weight: 600;
    color: #48bb78;
    margin-bottom: 30px !important;
}

.success-card .btn-primary {
    width: 100%;
}

.no-options {
    padding: 15px;
    background: #fff5f5;
    border: 2px solid #feb2b2;
    border-radius: 6px;
    color: #e53e3e;
    font-weight: 500;
    text-align: center;
}

/* ==================== RESPONSIVE ==================== */
@media (max-width: 768px) {

    .anket-card,
    .error-card,
    .success-card {
        padding: 30px 20px;
    }

    .form-row {
        grid-template-columns: 1fr;
        gap: 20px;
    }

    .card-header h1 {
        font-size: 24px;
    }

    .soru-text {
        font-size: 15px;
    }

    .form-actions {
        flex-direction: column;
    }

    .form-actions button {
        width: 100%;
    }
}

@media (max-width: 480px) {
    .anket-container {
        padding: 20px 12px;
    }

    .anket-card,
    .error-card,
    .success-card {
        padding: 20px 15px;
        border-radius: 12px;
    }

    .card-header h1 {
        font-size: 22px;
        margin-bottom: 10px;
    }

    .card-header p {
        font-size: 14px;
    }

    .soru-card {
        padding: 15px;
        margin-bottom: 15px;
    }

    .soru-header {
        gap: 12px;
    }

    .soru-numarasi {
        min-width: 30px;
        height: 30px;
        font-size: 14px;
    }

    .soru-text {
        font-size: 14px;
    }

    .form-label {
        font-size: 13px;
    }

    .form-input,
    .textarea-input {
        font-size: 14px;
        padding: 10px 12px;
    }

    .radio-wrapper,
    .checkbox-wrapper {
        padding: 10px 12px;
        gap: 10px;
    }

    .radio-label,
    .checkbox-label {
        font-size: 14px;
    }

    .btn-primary,
    .btn-secondary {
        padding: 12px 20px;
        font-size: 14px;
    }

    .step-indicator {
        margin-bottom: 25px;
    }

    .step-badge {
        width: 32px;
        height: 32px;
        font-size: 12px;
    }

    .step-line {
        width: 25px;
        height: 2px;
    }

    .form-row {
        margin-bottom: 20px;
    }

    .criteria-section {
        padding: 20px;
        margin: 30px 0;
    }

    .sorular-container {
        gap: 18px;
        margin-bottom: 30px;
    }
}